<UserControl x:Class="RealPropertySystemApp.ui.ServerLogViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealPropertySystemApp.ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="..\Styles.xaml" />
    </UserControl.Resources>

    <Grid Background="{StaticResource WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Логи системы" FontSize="18" FontWeight="Bold" Foreground="White"/>
        </StackPanel>

        <!-- Список логов -->
        <ListView x:Name="XLogList" Grid.Row="1" Background="{StaticResource LogBack}" Margin="10" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1"
                  
                  Width="{Binding ActualWidth, ElementName=MLVItemsPresenter, Mode=OneWay}"
                  >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            
            <ListView.Template>
                <ControlTemplate TargetType="{x:Type ListView}">
                    <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="1" SnapsToDevicePixels="true">
                        <ScrollViewer Focusable="false" Padding="{TemplateBinding Padding}">
                            <ItemsPresenter x:Name="MLVItemsPresenter" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </ListView.Template>
            <ListView.ItemTemplate>
                
                
                <DataTemplate>
                    <Border Margin="5" Padding="10" Background="{StaticResource ListItemBackground}" CornerRadius="5">
                        <TextBlock Text="{Binding}" Foreground="Black" TextWrapping="Wrap" />
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Нижняя панель управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="PrevPage" Content="Назад" Width="80" Margin="5" Background="{StaticResource ButtonBackground}" Foreground="White" />
            <TextBlock Text="Страница" VerticalAlignment="Center" Margin="5" Foreground="White" />
            <TextBlock x:Name="LogPageCurrent" FontWeight="Bold" Foreground="White"  VerticalAlignment="Center"/>
            <TextBlock Text="из" VerticalAlignment="Center" Margin="5" Foreground="{StaticResource TextBrush}"  />
            <TextBlock x:Name="LogPageTotal" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" />
            <Button x:Name="NextPage" Content="Вперед" Width="80" Margin="5" Background="{StaticResource ButtonBackground}" Foreground="White" />
        </StackPanel>
    </Grid>
</UserControl>
