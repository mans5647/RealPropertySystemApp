<UserControl x:Class="RealPropertySystemApp.ui.ClassicNotificationContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealPropertySystemApp.ui"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="350">

    <UserControl.Resources>
        <ResourceDictionary Source="..\Styles.xaml" />
    </UserControl.Resources>

    <!-- Wrap the Grid inside a Border -->
    <Border Background="{StaticResource WindowBackground}" CornerRadius="10" BorderThickness="2" BorderBrush="AliceBlue" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="SecondsRemeiningTb" Style="{StaticResource NotificationStyleClassicWhiteText}"></TextBlock>
                <TextBlock Grid.Row="0" Name="TitleTb" Style="{StaticResource NotificationStyleClassic}">
                </TextBlock>
            </StackPanel>

            <TextBlock Grid.Row="1" Name="DescriptionTb" TextAlignment="Center" Style="{StaticResource NotificationStyleClassic}" ></TextBlock>
        </Grid>
    </Border>
</UserControl>
