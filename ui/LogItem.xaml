<UserControl x:Class="RealPropertySystemApp.ui.LogItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealPropertySystemApp.ui"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary Source="..\Styles.xaml"></ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Ellipse Grid.Column="0" Name="XLogColor" Width="20" Height="20">
        </Ellipse>

        <TextBlock Grid.Column="1" x:Name="XLogTime" Margin="20, 10,20, 10" Foreground="White">
            
        </TextBlock>

        <ScrollViewer Grid.Column="2">
            <TextBlock x:Name="XLogText" Margin="20, 10,20, 10" Foreground="White"></TextBlock>
        </ScrollViewer>

    </Grid>
</UserControl>
