<UserControl x:Class="RealPropertySystemApp.ui.AppLogViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealPropertySystemApp.ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary Source="..\Styles.xaml"></ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Style="{StaticResource LogViewerBack}">
            <TextBlock Text="Hello" Style="{StaticResource LogTextStyle }" TextWrapping="Wrap" Name="XText" />
        </ScrollViewer>

    </Grid>
</UserControl>
