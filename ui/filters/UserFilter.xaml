<UserControl x:Class="RealPropertySystemApp.ui.filters.UserFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealPropertySystemApp.ui.filters"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="..\..\Styles.xaml"></ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Имя" Grid.Column="0" Style="{StaticResource SecondaryTextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock Text="Фамилия" Grid.Column="1" Style="{StaticResource SecondaryTextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock Text="Дата (мин.)" Grid.Column="2" Style="{StaticResource SecondaryTextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock Text="Дата (макс.)" Grid.Column="3" Style="{StaticResource SecondaryTextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock Text="Роль" Grid.Column="4" Style="{StaticResource SecondaryTextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
                </Grid>

                <Grid Grid.Row="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBox Name="FilterFirstname" Grid.Column="0" Style="{StaticResource TextBoxStyle}" Margin="10, 10, 10,10"></TextBox>
                    <TextBox Name="FilterLastname" Grid.Column="1" Style="{StaticResource TextBoxStyle}" Margin="10, 10, 10,10"></TextBox>
                    <DatePicker Name="FilterDateMin" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></DatePicker>
                    <DatePicker Name="FilterDateMax" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"></DatePicker>
                    <TextBox Name="FilterRolename" Grid.Column="4" Style="{StaticResource TextBoxStyle}" Margin="10, 10, 10,10"></TextBox>

                </Grid>

            </Grid>
        </Grid>

        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Name="ResetFilterBtn" Content="Сбросить" Style="{StaticResource RoundButtonRedWithWhite}" ></Button>
            <Button Grid.Row="1" Name="ApplyFilterBtn" Content="Применить" Style="{StaticResource SwitchButtonStyle}"></Button>
        </Grid>

    </Grid>
</UserControl>
