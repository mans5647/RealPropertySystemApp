<Page x:Class="RealPropertySystemApp.pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FF4C566A"
      Title="Регистрация">

    <Page.Resources>
        <ResourceDictionary Source="..\Styles.xaml" />
    </Page.Resources>

    <Grid Margin="20">
        <!-- Define uniform spacing between rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Register Button -->
            <RowDefinition Height="20" />
            <!-- Spacer -->
            <RowDefinition Height="Auto" />
            <!-- Fields -->
            <RowDefinition Height="Auto" />
            <!-- Employee Options -->
        </Grid.RowDefinitions>

        <!-- Register Button -->
        <Button x:Name="DoRegisterButton"
                Content="Зарегистрироваться"
                Width="200"
                Height="40"
                Margin="0,10,0,0"
                Style="{StaticResource SwitchButtonStyle}"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Grid.Row="0" />

        <!-- Fields StackPanel -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,20,0,0">
            <!-- Login -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock x:Name="LoginLabel"
                           Text="Введите ваш логин"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,5" />
                <TextBox x:Name="UserLogin"
                         Height="35"
                         FontSize="14"
                         Margin="0,0,0,0"
                         Style="{StaticResource TextBoxStyle}" />
            </StackPanel>

            <!-- Password -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock x:Name="PasswordLabel"
                           Text="Введите ваш пароль"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,5" />
                <PasswordBox x:Name="UserPassword"
                             Height="35"
                             FontSize="14"
                             Margin="0,0,0,0"
                             Style="{StaticResource PasswordBoxStyle}" />
            </StackPanel>

            <!-- Password Confirmation -->
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="PasswordConfirmLabel"
                           Text="Повторите пароль"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,5" />
                <PasswordBox x:Name="UserPasswordConfirm"
                             Height="35"
                             FontSize="14"
                             Margin="0,0,0,0"
                             Style="{StaticResource PasswordBoxStyle}" />
            </StackPanel>
        </StackPanel>

        <!-- Employee Options -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="0,20,0,0"
                    Name="EmployeeOptions">
            <TextBlock x:Name="EmployeeCheckLabel"
                       Text="Я сотрудник (укажите, если вы являетесь сотрудником компании)"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,10,0" />
            <CheckBox x:Name="iAmEmployeeCheck"
                      IsChecked="False"
                      VerticalAlignment="Center"
                      Margin="0,0,0,0" />
        </StackPanel>
    </Grid>
</Page>
