<Page x:Class="RealPropertySystemApp.pages.LogViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RealPropertySystemApp.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogViewPage">

    <Page.Resources>
        <ResourceDictionary Source="..\Styles.xaml" />
    </Page.Resources>

    <Grid Background="{StaticResource WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Top bar -->
            <RowDefinition Height="*" />
            <!-- Content frame -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <StackPanel Orientation="Horizontal" Background="{StaticResource ButtonBackground}">
            <Button Content="Загрузить логи приложения"
                    Style="{StaticResource SwitchButtonStyle}" 
                    Name="XLoadAppLogsButton"
                    Margin="5" />
            <Button Content="Загрузить логи сервера"
                    Name="XLoadServerLogsButton"
                    Style="{StaticResource SwitchButtonStyle}" 
                    Margin="5" />
        </StackPanel>

        <!-- Content Frame -->
        <Frame Grid.Row="1"
               Name="XPageContent"
               Style="{StaticResource FrameStyle}"
               NavigationUIVisibility="Hidden" />
    </Grid>
</Page>
