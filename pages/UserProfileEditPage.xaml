<Page x:Class="RealPropertySystemApp.pages.UserProfileEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="User Profile Edit"
      Background="#FF2E3440">

    <Page.Resources>
        <ResourceDictionary Source="..\Styles.xaml" />
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,10" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource SecondaryTextBlockStyle}" 
               Width="130" VerticalAlignment="Center" 
               Text="Логин:" />
            <TextBox MinWidth="300" Name="xlogin" Text="{Binding login, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}"
             Style="{StaticResource TextBoxStyle}" Margin="10,0,0,0" />
            <TextBlock x:Name="filledStatus_login" 
               Style="{StaticResource SecondaryTextBlockStyle}" 
               VerticalAlignment="Center" 
               Text="Не заполнено" Margin="10,0,0,0" />
        </StackPanel>

        <!-- First Name -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource SecondaryTextBlockStyle}" 
                       Width="130" VerticalAlignment="Center" 
                       Text="Имя:" />
            <TextBox MinWidth="300" Name="xfname" Text="{Binding firstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}"
                     Style="{StaticResource TextBoxStyle}" Margin="10,0,0,0" />
            <TextBlock x:Name="filledStatus_firstname" 
                       Style="{StaticResource SecondaryTextBlockStyle}" 
                       VerticalAlignment="Center" 
                       Text="Не заполнено" Margin="10,0,0,0" />
        </StackPanel>

        <!-- Last Name -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource SecondaryTextBlockStyle}" 
                       Width="130" VerticalAlignment="Center" 
                       Text="Фамилия:" />
            <TextBox MinWidth="300" Name="xlname" Text="{Binding lastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource TextBoxStyle}" Margin="10,0,0,0" />
            <TextBlock x:Name="filledStatus_lastname" 
                       Style="{StaticResource SecondaryTextBlockStyle}" 
                       VerticalAlignment="Center" 
                       Text="Не заполнено" Margin="10,0,0,0" />
        </StackPanel>

        <!-- Birth Date -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,10" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource SecondaryTextBlockStyle}" 
                       Width="130" VerticalAlignment="Center" 
                       Text="Дата рождения:" />
            <DatePicker Name="xbirth" Text="{Binding birthDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Margin="10,0,0,0" Width="300" />
            <TextBlock x:Name="filledStatus_birth" 
                       Style="{StaticResource SecondaryTextBlockStyle}" 
                       VerticalAlignment="Center" 
                       Text="Не заполнено" Margin="10,0,0,0" />
        </StackPanel>

        <!-- Passport Data -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,10" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource SecondaryTextBlockStyle}" 
                       Width="130" VerticalAlignment="Center" 
                       Text="Паспорт:" />
            <Button x:Name="EditPassportBtn" Content="Редактировать"
                    Style="{StaticResource SwitchButtonStyle}" Width="150" Margin="10,0,0,0" />
            <TextBlock x:Name="filledStatus_passport" 
                       Style="{StaticResource SecondaryTextBlockStyle}" 
                       VerticalAlignment="Center" 
                       Text="Не заполнено" Margin="10,0,0,0" />
        </StackPanel>

        <!-- Password -->
        <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="0,10" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource SecondaryTextBlockStyle}" 
                       Width="130" VerticalAlignment="Center" 
                       Text="Пароль:" />
            <PasswordBox Name="xpassword"
                         PasswordChanged="onPasswordChanged"
                         Margin="10,0,0,0" MinWidth="300" />
            <TextBlock x:Name="filledStatus_password" 
                       Style="{StaticResource SecondaryTextBlockStyle}" 
                       VerticalAlignment="Center" 
                       Text="Не заполнено" Margin="10,0,0,0" />
        </StackPanel>

        <!-- Action Buttons -->

        <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" 
            Style="{StaticResource SwitchButtonStyle}" 
            Width="150" 
            Height="40"
                Margin="0,0,10,0" 
            Name="SaveUserBtn"/>
        </StackPanel>


    </Grid>
</Page>
